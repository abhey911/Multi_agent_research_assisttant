# Google Gemini API Key
GOOGLE_API_KEY=your_google_gemini_api_key_here

# Hugging Face API Key (optional - for Hugging Face inference)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# SerpAPI Key (optional - for Google search)
SERPAPI_API_KEY=your_serpapi_key_here

# Model Configuration
GEMINI_MODEL_FLASH=gemini-1.5-flash
GEMINI_MODEL_PRO=gemini-1.5-pro

# Hugging Face Model Configuration (alternative to Gemini)
HF_MODEL=huggingface/meta-llama/Llama-2-70b-chat-hf
USE_HUGGINGFACE=false

# Research Configuration
MAX_SEARCH_RESULTS=10
MAX_ITERATIONS=5
RESEARCH_DEPTH=standard
